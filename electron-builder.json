{
  "appId": "com.varunaditya.sparxsolver",
  "productName": "SparxMaths-Solver",
  "files": [
    "static/**",
    "templates/**",
    "app.js",
    "package.json",
    "node_modules/**"
  ],
  "directories": {
    "output": "build"
  },
  "win": {
    "target": "nsis",
    "icon": "logo.ico"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "logo.icns",
    "hardenedRuntime": false,
    "gatekeeperAssess": false,
    "sign": false,
    "extendInfo": {
      "LSApplicationCategoryType": "public.app-category.developer-tools",
      "NSMicrophoneUsageDescription": "We need access to your microphone."
    }
  }
}